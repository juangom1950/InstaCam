<?xml version="1.0" encoding="utf-8"?>
<!--Floating Action Button for versions before 21-->
<!--Add shadows for versions pre 21-->
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:top="8dp">
    <layer-list
      xmlns:android="http://schemas.android.com/apk/res/android">

      <item>
        <shape android:shape="oval">
          <padding android:bottom="3px"
                   android:left="3px"
                   android:right="3px"
                   android:top="3px"/>
          <!--Add 10 infront exadecimal color to add transparency-->
          <solid android:color="#10000000"></solid>
        </shape>
      </item>

      <item>
        <shape android:shape="oval">
          <padding android:bottom="2px"
                   android:left="2px"
                   android:right="2px"
                   android:top="2px"/>
          <!--Add 10 infront exadecimal color to add transparency-->
          <solid android:color="#11000000"></solid>
        </shape>
      </item>

      <item>
        <shape android:shape="oval">
          <padding android:bottom="1px"
                   android:left="1px"
                   android:right="1px"
                   android:top="1px"/>
          <!--Add 10 infront exadecimal color to add transparency-->
          <solid android:color="#12000000"></solid>
        </shape>
      </item>

      <item>
        <shape android:shape="oval">
          <padding android:bottom="1px"
                   android:left="1px"
                   android:right="1px"
                   android:top="1px"/>
          <!--Add 10 infront exadecimal color to add transparency-->
          <solid android:color="#13000000"></solid>
        </shape>
      </item>

      <item>
        <shape android:shape="oval">
          <padding android:bottom="1px"
                   android:left="1px"
                   android:right="1px"
                   android:top="1px"/>
          <!--Add 10 infront exadecimal color to add transparency-->
          <solid android:color="#14000000"></solid>
        </shape>
      </item>

    </layer-list>
  </item>
  <item>
    <shape android:shape="oval">
      <solid android:color="@color/primary"></solid>
    </shape>
  </item>
</layer-list>